<templates id="template" xml:space="preserve">
    <t t-name="MyMessagePopup" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-textinput">
                <p class="title">
                    <t t-esc=" props.title || 'Message' " />
                </p>
                <p class="body">
                    <t t-esc="  props.body || '' " />
                </p>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('total')]" position="replace">
            <t t-if="currentOrder.is_return_order and currentOrder.get_total_with_tax() &lt;=0">
                <div class="total" style="color:#2b8b8e">
                    <t t-esc="totalDueText" />
                </div>
            </t>
            <t t-if="!(currentOrder.is_return_order and currentOrder.get_total_with_tax() &lt;=0)">
                <div class="total">
                    <t t-esc="totalDueText" />
                </div>
            </t>
        </xpath>
    </t>

    <t t-name="ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('rightpane')]" position="inside">
            <div id="refund_order_notify" style="color: rgb(0, 0, 0);top: 238px;left:30%;position: absolute;font-size: -webkit-xxx-large;font-family: fantasy;text-shadow: -5px 4px 2px #c5c5c5;display:none;">
                THIS IS A REFUND ORDER
            </div>
             <span id="cancel_refund_order" t-on-click="click_cancel_refund_order" style="cursor: pointer;position: absolute;top: 298px;left:45%;color: white;font-size: xx-large;z-index: 333;text-align: center;height: 38px;border-radius: 5%;font-family: fantasy;font-style: normal;padding: 6px;opacity: 0.7;width: 112px;background-color: rgb(154, 71, 71);display: none;">
                Cancel
            </span>
        </xpath>
    </t>

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button') and hasclass('next')]" position="before">
            <span class='button cancel_refund_order' t-on-click="click_delete_return_order" style="cursor: pointer;color:white;width:86px;height:34px;right:0px; margin-right:158px; background:rgb(154, 71, 71)">
                Cancel
            </span>
        </xpath>
    </t>

    <t t-name="OrderReturnPopup" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-textinput return_popup_style">
                <div class="title">
                    <span>
                        Return Products
                    </span>
                    <span class="button" id="complete_return" t-on-click="click_complete_return" style="position: absolute;right: 1%;top: -1%;background-color: #5c92a7;color: white;width: 28%;">
                        Complete Return
                    </span>
                </div>
                <div class="body" style="margin: 5px;">
                    <div class='container_div'>
                        <table border="1" frame="void" rules="rows" class="return_popup_table">
                            <tr class="return_popup_tr">
                                <th class="table_data_cells"><p>Product (<span style="color:#2f6e75">Qty</span>.)</p></th>
                                <th class="table_data_cells">Return Qty.</th>
                            </tr>

                            <t t-foreach="props.orderlines || []" t-as="line" t-key="line.id">
                                <tr class="return_popup_tr">
                                    <td class="table_data_cells"><t t-esc="line.product_id[1]"/> (<b style="color:#2f6e75"><t t-esc="line.qty - line.line_qty_returned"/></b>)</td>
                                    <td class="table_data_cells return_qty"><input t-att-line-qty-remaining='line.qty - line.line_qty_returned' t-att-line-id="line.id" type="number" value="0"></input></td>
                                </tr>
                            </t>

                        </table>
                    </div>
                </div>
                <div class="footer">
                    <div class="button" id="return_order" t-on-click="click_return_order" style="background-color: rgb(94, 191, 143);color: white;">
                        Return
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="OrderDetails">
        <section class='order-details' style="border-bottom: solid 5px rgb(110,200,155);">
            <div class='client-details-box clearfix' style="background-color: rgb(252, 252, 252);">
                <div class='client-details-left' style="margin-bottom: 1%;">
                    <div class='client-detail'>
                        <h2 style="margin-left: 5.6%;color: rgb(67, 134, 111);">Order Details</h2>
                    </div>
                    <div class='client-detail' style="margin-left: 6.3%;">
                        <span class='label' style="text-align: left;">Name:</span>
                        <span class='detail client-address'><t t-esc='order.name' /></span>
                    </div>
                    <t t-if="order.partner_id">
                        <div class='client-detail' style="margin-left: 6.3%;">
                            <span class='label'>Customer:</span>
                            <span class='detail client-address'><t t-esc='order.partner_id[1]' /></span>
                        </div>
                    </t>
                    <t t-if="!order.partner_id">
                        <div class='client-detail' style="margin-left: 6.3%;">
                            <span class='label'>Customer:</span>
                            -
                        </div>
                    </t>
                </div>
                <div class='client-details-right' style="margin-right: -20%;">
                    <div class='client-detail' style="margin-left: 15%;margin-top: 2%;">
                          <t t-if="!order.refunded">
                            <div id="wk_refund" class='control-button highlight' >
                                Return/Refund
                            </div>
                          </t>
                          <div id="reprint_order" class='control-button highlight'>
                              Reprint
                          </div>
                      </div>
                    <!-- <div class='client-detail'>
                        <div id="reprint_order" class='control-button highlight' style="margin-left: 18%;margin-top: 1%;">
                            Reprint
                        </div>
                    </div> -->
                    <img id="close_order_details" src="/pos_order_return_reprint/static/src/img/icon-cross.png" style="cursor: pointer;position: absolute;left: 96%;top: 3%;"/>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;">Date:</span>
                        <span class='detail client-id'><t t-esc='order.date_order'/></span>
                    </div>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;width: 27%;">Return/Refund:</span>
                        <span class='detail client-id'><t t-esc='order.return_status'/></span>
                    </div>
                </div>

                <div class='order-detail' style="width: 100%;text-align: left;margin-left: 3%;">
                    <table border="1" frame="void" rules="rows" id="order_line_content" style="width: 94%;text-align:center;border-bottom: 3px solid rgb(70, 150, 110);">
                        <tr style="color: rgb(51, 112, 39);border-bottom: 3px solid rgb(67, 134, 111);">
                            <th style="text-align:left;width: 35%;">Product</th>
                            <th style="width: 10%;">Quantity</th>
                            <th style="width: 10%;">Returns</th>
                            <th style="width: 10%;">Unit Price</th>
                            <th style="width: 10%;">Tax</th>
                            <th style="width: 10%;">Discount(%)</th>
                            <th style="width: 10%;">Price</th>
                        </tr>
                        <t t-foreach='orderlines' t-as='line'>
                            <tr>
                                <td style="text-align:left">
                                    <t t-if="widget.env.pos.db.get_product_by_id(line.product_id[0])">
                                        <t t-if="widget.env.pos.db.get_product_by_id(line.product_id[0]).not_returnable">
                                            <t t-esc="line.product_id[1]"/> <b style="color: rgb(160, 89, 89);">(Non-Returnable)</b>
                                        </t>
                                        <t t-if="!widget.env.pos.db.get_product_by_id(line.product_id[0]).not_returnable">
                                            <t t-esc="line.product_id[1]"/>
                                        </t>
                                    </t>
                                    <t t-if="!widget.env.pos.db.get_product_by_id(line.product_id[0])">
                                        <t t-esc="line.product_id[1]"/> <b style="color: rgb(160, 89, 89);">(Unavailable In POS)</b>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="line.qty"/>
                                </td>
                                <td>
                                    <t t-if="line.line_qty_returned == 0">
                                        -
                                    </t>
                                    <t t-if="line.line_qty_returned != 0">
                                        <t t-esc="line.line_qty_returned"/>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="widget.env.pos.format_currency(line.price_unit)"/>
                                </td>
                                <td>
                                    <t t-if="line.price_subtotal_incl - line.price_subtotal != 0.0">
                                        <t t-esc="widget.env.pos.format_currency(Math.abs(line.price_subtotal_incl - line.price_subtotal))"/>
                                    </t>
                                    <t t-if="line.price_subtotal_incl - line.price_subtotal == 0.0">
                                        -
                                    </t>
                                </td>
                                <td>
                                    <t t-if="line.discount == 0">
                                        -
                                    </t>
                                    <t t-if="line.discount != 0">
                                        <t t-esc="line.discount"/>%
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="widget.env.pos.format_currency(line.price_subtotal_incl)"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div class='client-details-box clearfix'>
                    <div class='client-details-left' style="margin-top: 1%;">
                        <div class='client-detail'>
                            <span class='label' style="width: 27.5%;color: rgb(67, 134, 111);text-align: left;margin-left: 5.7%;">Payment modes:</span>
                            <ul style="margin-left: 5.7%;">
                            <t t-foreach='statements' t-as='statement'>
                                <li><t t-esc="statement.journal_id[1]"/> (<t t-esc="widget.env.pos.format_currency(statement.amount)"/>)</li>
                            </t>
                        </ul>
                        </div>
                    </div>
                    <div class='client-details-right' style="margin-top: 1%;margin-right: -26%;">
                        <div class='client-detail'>
                            <span class='label'>Total</span>
                            <span class='detail client-id' style="color: rgb(67, 134, 111);font-weight: bold;"><t t-esc='widget.env.pos.format_currency(order.amount_total)'/></span>
                        </div>
                    </div>
                </div>
                <br/>
            </div>
        </section>
    </t>

    <t t-name="OrdersScreenWidget" t-inherit="pos_orders.OrdersScreenWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//table[hasclass('client-list')]//thead//tr//th[4]" position="after">
            <th>Return Status</th>
        </xpath>
    </t>

    <t t-extend='WkOrderLine'>
        <t t-jquery='.wk-order-line' t-operation='append'>
            <td><t t-esc='order.return_status' /></td>
        </t>
    </t>

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="inside">
            <t t-if='receipt.order.is_return_order and !receipt.order.is_exchange_order'>
                <div class="pos-center-align"><span>Return Order</span></div>
            </t>
            <t t-if='receipt.order.is_return_order and receipt.order.is_exchange_order'>
                <div class="pos-center-align"><span>Exchange Order</span></div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-amount')][1]" position="replace">
            <div class="pos-receipt-amount">
                <t t-if="!receipt.order.is_return_order or receipt.order.get_total_with_tax()>0">
                    TOTAL
                </t>
                <t t-if="receipt.order.is_return_order and receipt.order.get_total_with_tax()&lt;=0">
                    TOTAL Refund
                </t>
                <t t-if="receipt.order.is_return_order">
                    <span t-esc='env.pos.format_currency_no_symbol(receipt.total_with_tax * -1)' class="pos-receipt-right-align"/>
                </t>
                <t t-if="!receipt.order.is_return_order">
                    <span t-esc='env.pos.format_currency_no_symbol(receipt.total_with_tax)' class="pos-receipt-right-align"/>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[@class='pos-receipt-order-data']" position="before">
            <div>
                <div style="margin:10px; text-align: center; padding:0 13%;">
                  <t t-if="env.pos.config.show_barcode">
                    <div>
                      <span id="barcode_data" t-esc="receiptBarcode" style="display: NONE;"/>
                      <!-- <div id="barcode_print1" style="width:100%; height:200px; margin-bottom:10px; text-align: center;"></div> -->
                      <div style="margin:auto;margin-bottom:10px;margin-top:10px;text-align: center;" id="barcode_print"></div>
                    </div>
                  </t>
                </div>
            </div>
        </xpath>
    </t>

    <t t-name="OrderReprintScreen" owl="1">
  		<div class="receipt-screen screen">
  			<div class="screen-content">
  				<div class="top-content">
  					<span class="button back" t-on-click="back">
  						<i class="fa fa-angle-double-left"></i>
  						<span> </span>
  						<span>Back</span>
  					</span>
  					<div class="top-content-center">
  						<h1> Reprint Order</h1>
  					</div>
  					<span class="button next highlight" t-on-click="back">
  						<span>Ok</span>
  						<span> </span>
  						<i class="fa fa-angle-double-right"></i>
  					</span>
  				</div>
  				<div class="centered-content">
  					<div class="button print" t-on-click="printReceipt">
  						<i class="fa fa-print"></i>
  						<span> </span>
  						<span>Print</span>
  					</div>
  					<div class="pos-receipt-container">
  						<OrderReprintReceipt
                order="props.order"
  							partner_id="props.partner_id"
                barcode = "props.barcode"
  							qr_code = "props.qr_code"
  							discount = "props.discount"
  							orderlines = "props.orderlines"
  							paymentlines = "props.paymentlines"
  							change = "props.change"
  							subtotal = "props.subtotal"
  							tax = "props.tax"
  							user_name = "props.user_name"
  						/>
  					</div>
  				</div>
  			</div>
  		</div>
  	</t>

  	<t t-name="OrderReprintReceipt" owl="1">

      <div class="pos-receipt">
        <t t-if="env.pos.company_logo_base64">
            <img class="pos-receipt-logo" t-att-src="env.pos.company_logo_base64" alt="Logo"/>
        </t>
        <!-- <t t-if="!env.pos.company_logo_base64">
            <h2 class="pos-receipt-center-align">
                <t t-esc="env.pos.company.name" />
            </h2>
            <br/>
        </t> -->
  			<!-- <img class="pos-receipt-logo" t-att-src='env.pos.company_logo_base64' alt="Logo"/>
  			<br/> -->
        <div class="pos-receipt-center-align">
          <strong><t t-esc="env.pos.company.name"/></strong>
        </div>

  			<div class="pos-receipt-contact">

          <t t-if="env.pos.company.contact_address">
              <div><strong><t t-esc="env.pos.company.contact_address"/></strong></div>
          </t>
          <t t-if="env.pos.company.street"><span t-esc="env.pos.company.street"/>,
          </t>
          <t t-if="env.pos.company.street2"><span t-esc="env.pos.company.street2"/>,
          </t>
          <t t-if="env.pos.company.city"><span t-esc="env.pos.company.city"/>,
          </t>
          <t t-if="env.pos.company.state_id"><span t-esc="env.pos.company.state_id"/>.
          </t>
  				<br/>
          <t t-if="env.pos.company.name_arabic">
              <div style="font-size:18pt;font-weight:bold">
                  <span t-esc="env.pos.company.name_arabic" style="text-size:12pt"/>
                  <br/>
              </div>
          </t>

          <table style="margin-top:5pt;padding:5pt; border-bottom:1pt dashed black; font-weight:bold;">
              <colgroup>
                  <col width='24%'/>
                  <col width='1%'/>
                  <col width='49%'/>
                  <col width='1%'/>
                  <col width='25%'/>
              </colgroup>
              <t t-if="env.pos.company.vat">
                <tr>
                    <td style="vertical-align:bottom; font-weight:bold;">
                        VAT Reg. No
                    </td>
                    <td style="vertical-align:bottom;padding-left:3pt; font-weight:bold;">:</td>
                    <td style="text-align:center;vertical-align:bottom;padding-right:5pt; font-weight:bold;">
                        <t t-esc="env.pos.company.vat" style="text-align:center; font-weight:bold;"/>
                    </td>
                    <td style="vertical-align:bottom;padding-right:3pt; font-weight:bold;">:</td>
                    <td style="text-align:right;vertical-align:bottom;text-size:7pt; font-weight:bold;">
                        رقم الضريبي
                    </td>
                </tr>
              </t>
          </table>

          <!-- <t t-if="receipt.header">
              <div style='text-align:center;padding-top:5pt; font-weight:bold;'>
                  <t t-esc="receipt.header"/>
              </div>
              <br/>
          </t> -->
          <br/>
          <div style="font-weight:bold;padding-bottom:5pt;padding-top:0pt; border-bottom:1pt dashed black;"> INVOICE فاتورة </div>
          <br/>
  				<br/>
  			</div>
        <div class="orderlines">
            <table style="border-bottom:1pt dashed black;margin-top:-20pt;padding:5pt;font-size:9pt; font-weight:bold;">
                <colgroup>
                    <col width='24%'/>
                    <col width='1%'/>
                    <col width='49%'/>
                    <col width='1%'/>
                    <col width='25%'/>
                </colgroup>
                <tr>
                    <td style="vertical-align:bottom;">
                        Invoice No
                    </td>
                    <td style="vertical-align:bottom;padding-left:3pt; font-weight:bold;">:</td>
                    <td style="text-align:center;vertical-align:bottom;padding-right:5pt; font-weight:bold;">
                        <t t-esc="props.order.pos_reference"/>
                    </td>
                    <td style="vertical-align:bottom;padding-right:3pt; font-weight:bold;">:</td>
                    <td style="text-align:right;vertical-align:bottom;text-size:7pt; font-weight:bold;">
                        رقم الفاتورة
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">Date</td>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-left:3pt; font-weight:bold;">:</td>
                    <td style="vertical-align:bottom;text-align:center;padding-top:5pt;padding-bottom:3pt;padding-right:3pt; font-weight:bold;">
                        <t t-esc="props.order.date_order"/>
                    </td>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">:</td>
                    <td style="text-align:right;vertical-align:bottom;text-size:7pt;padding-top:3pt;padding-bottom:3pt;padding-right:3pt; font-weight:bold;">
                        التاريخ
                    </td>
                </tr>

                <t t-if="props.partner_id">
                  <tr>
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">Customer</td>
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-left:3pt; font-weight:bold;">:</td>
                      <td style="text-align:center;vertical-align:bottom;padding-right:5pt;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">
                          <t t-esc="props.partner_id.name"/>
                      </td>
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-right:3pt; font-weight:bold;">:</td>
                      <td style="text-align:right;vertical-align:bottom;text-size:7pt;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">
                          العميل
                      </td>
                  </tr>
                  <tr t-if="props.partner_id.vat">
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">Vat No.</td>
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-left:3pt; font-weight:bold;">:</td>
                      <td style="text-align:center;vertical-align:bottom;padding-right:5pt;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">
                          <t t-esc="props.partner_id.vat"/>
                      </td>
                      <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-right:3pt; font-weight:bold;">:</td>
                      <td style="text-align:right;vertical-align:bottom;text-size:7pt;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">
                        رقم الضريبى
                      </td>
                  </tr>
                </t>
                <tr>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt">Sales Person</td>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-left:3pt">:</td>
                    <td style="text-align:center;vertical-align:bottom;padding-right:5pt;padding-top:3pt;padding-bottom:3pt">
                        <t t-esc="props.user_name"/>
                    </td>
                    <td style="vertical-align:bottom;padding-top:3pt;padding-bottom:3pt;padding-right:3pt; font-weight:bold;">:</td>
                    <td style="text-align:right;vertical-align:bottom;text-size:7pt;padding-top:3pt;padding-bottom:3pt; font-weight:bold;">
                        مندوب مبيعات
                    </td>
                </tr>

            </table>


            <table style="margin-top:5pt;padding:5pt;border-bottom:1pt dashed black;font-size:9pt;width:100%; font-weight:bold;" class='receipt-orderlines'>
                 <colgroup>
                    <col width='22%'/>
                    <col width='12%'/>
                    <col width='21%'/>
                    <col width='45%'/>
                </colgroup>
                <tr>
                    <th style="border-bottom:1pt dashed black;vertical-align:bottom; margin-bottom:5pt;padding-bottom:3pt; font-weight:bold;">
                        مبلغ<br/>AMOUNT
                    </th>
                    <th style="border-bottom:1pt dashed black;vertical-align:bottom;text-align:right;margin-bottom:5pt;padding-bottom:3pt; font-weight:bold;">
                        الكمية<br/>QTY
                    </th>
                    <th style="border-bottom:1pt dashed black;vertical-align:bottom;text-align:right;margin-bottom:5pt;padding-bottom:3pt; font-weight:bold;">
                        السعر<br/>PRICE
                    </th>
                    <th style="border-bottom:1pt dashed black;vertical-align:bottom;text-align:right;margin-bottom:5pt;padding-bottom:3pt; font-weight:bold;">
                        اسم العنصر<br/>ITEM NAME
                    </th>
                </tr>
                <tr t-foreach="props.orderlines" t-as="orderline" style="margin-top:5pt">
                    <td style="padding-bottom:3pt;padding-top:2pt;vertical-align:top; font-weight:bold;">
                      <t t-esc="env.pos.format_currency(orderline.price_unit*orderline.qty)"/>
                    </td>
                    <td style="padding-bottom:3pt;padding-top:2pt;vertical-align:top; font-weight:bold;" class="pos-right-align">
                        <t t-esc="orderline.qty"/>
                    </td>

                    <td style="padding-bottom:3pt;padding-top:2pt;vertical-align:top; font-weight:bold;" class="pos-right-align">
                        <t t-esc="env.pos.format_currency(orderline.price_unit)"/>
                    </td>


                    <td style="text-align:right;padding-bottom:3pt;padding-top:2pt;vertical-align:top; font-weight:bold;">
                        <t t-esc="orderline.product_id"/>
                        <t t-if="orderline.product_name_arabic">
                            <br/>
                            <t t-esc="orderline.product_name_arabic"/>
                        </t>
                        <t t-if="orderline.discount > 0">
                            <div class="pos-disc-font">
                                With a<t t-esc="orderline.discount"/>% discount
                            </div>
                        </t>
                    </td>
                </tr>
            </table>


            <table style="border-bottom:1pt dashed black;font-size:10pt;margin-bottom:-20pt; font-weight:bold;" class='receipt-total'>
                <colgroup>
                    <col width='24%'/>
                    <col width='1%'/>
                    <col width='56%'/>
                    <col width='1%'/>
                    <col width='18%'/>
                </colgroup>
                <tr>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">TOTAL</td>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">:</td>
                    <td style="text-align:center;padding-bottom:5pt;padding-top:5pt;padding-right:6pt; font-weight:bold;">
                        <t t-esc="env.pos.format_currency(props.order.amount_total)"/>
                    </td>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">:</td>
                    <td style="text-align:right;padding-bottom:5pt;padding-top:5pt; font-weight:bold;">مجموع</td>
                </tr>
                <tr>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">Tax</td>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">:</td>
                    <td style="text-align:center;padding-bottom:5pt;padding-top:5pt;padding-right:6pt; font-weight:bold;">
                        <t t-esc="env.pos.format_currency(props.tax)"/>
                    </td>
                    <td style="padding-bottom:5pt;padding-top:5pt; font-weight:bold;">:</td>
                    <td style="text-align:right;padding-bottom:5pt;padding-top:5pt; font-weight:bold;">ضريبة</td>
                </tr>

                <tr>
                    <t t-if="discount_total">
                        <td>Discount</td>
                        <td>:</td>
                        <td style="text-align:center;padding-bottom:5pt;padding-top:5pt;padding-right:6pt; font-weight:bold;">
                            <span  t-esc="env.pos.format_currency(props.discount)" class="pos-receipt-center-align"/>
                        </td>
                        <td>:</td>
                        <td style="text-align:right; font-weight:bold;">خصم</td>
                    </t>
                </tr>
                <tr style="border-bottom:1pt dashed black">
                    <td style="padding-bottom:5pt; font-weight:bold;">NET AMOUNT</td>
                    <td style="padding-bottom:5pt; font-weight:bold;">:</td>
                    <td style="text-align:center;padding-bottom:5pt;padding-top:5pt;padding-right:6pt; font-weight:bold;">
                        <t t-esc="env.pos.format_currency(props.order.amount_total)"/>
                    </td>
                    <td style="padding-bottom:5pt; font-weight:bold;">:</td>
                    <td style="text-align:right;padding-bottom:5pt; font-weight:bold;">الصافي</td>
                </tr>

                <t t-foreach="props.paymentlines" t-as="line">
                    <tr>
                        <td style="vertical-align:bottom">
                            <t t-esc="line.name"/>

                        </td>
                        <td style="vertical-align:bottom; font-weight:bold;">:</td>
                        <td style="vertical-align:bottom;padding-right:6pt; font-weight:bold;" class="pos-center-align">
                            <t t-esc="env.pos.format_currency(line.amount)"/>
                        </td>
                        <td style="vertical-align:bottom; font-weight:bold;">:</td>
                        <td style="text-align:right;vertical-align:bottom; font-weight:bold;">استلم</td>
                    </tr>
                </t>
                <tr>
                    <td style="padding-bottom:5pt; font-weight:bold;">Change</td>
                    <td style="padding-bottom:5pt; font-weight:bold;">:</td>
                    <td style="padding-bottom:5pt;padding-right:6pt; font-weight:bold;" class="pos-center-align">
                        <t t-esc="env.pos.format_currency(-props.change)"/>
                    </td>
                    <td style="padding-bottom:5pt; font-weight:bold;">:</td>
                    <td style="padding-bottom:5pt;text-align:right; font-weight:bold;">الباقي</td>
                </tr>
            </table>
        </div>
  			<br /><br />

  			<div class='before-footer' />
  			<br/>

  			<t t-if="env.pos.config.show_barcode">
  				<div>
  					<span style="display:none;" t-esc="receiptBarcode"/>
  					<div style="margin:auto;margin-top:10px;" id="barcode_print1"></div>
  				</div>
  			</t>
        <div>
            <div style="margin:10px; text-align: center; padding:0 13%;">
                <span id="qr_data" t-esc="props.qr_code" style="display: NONE;"/>
                <div id="qrcode" style="width:100%; height:200px; margin-bottom:10px; text-align: center;"></div>
                <script type="text/javascript">
                    var  qrData = document.getElementById("qr_data").innerHTML;
                    new QRCode(document.getElementById("qrcode"), {"text": qrData ,width:200, height:200, correctLevel : QRCode.CorrectLevel.H});
                </script>
            </div>
        </div>

        <br/>
        <div class="pos-receipt-order-data">
            <div><t t-esc="props.order.pos_reference"/></div>
            <div><t t-esc="props.order.date_order"/></div>
        </div>
      </div>


    </t>


</templates>
